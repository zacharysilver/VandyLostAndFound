{
  "name": "vandylostandfound",
  "version": "1.0.0",
  "description": "We are building a Lost-And-Found Web Application which makes reporting and finding lost items easier and faster while keeping private information secure. Our client is the student body and staff at Vanderbilt University who need an efficient way to manage misplaced items on campus. The users of our platform can share details about lost (or found) items, upload pictures, and connect with each other to resolve cases.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "test": "cross-env NODE_ENV=test mocha \"test/backend/**/*.test.js\" --recursive",
    "test:frontend": "mocha \"test/frontend/**/*.test.jsx\" --require @babel/register --require ignore-styles --require ./test/frontend/setup.js",
    "coverage": "nyc npm test"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/zacharysilver/VandyLostAndFound.git"
  },
